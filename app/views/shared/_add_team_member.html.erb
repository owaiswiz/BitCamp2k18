<script>
 document.addEventListener("turbolinks:load", function() {
     handleRegistrationForm();
     handleAddNewMemberButton();
 })
</script>
<div class="modal fade" id="add-team-member-modal" tabindex="-1" role="dialog" aria-labelledby="add-team-member-modal" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <%= simple_form_for @member, url: teams_dashboard_add_member_path, defaults: {label: false} do |f| %>
        <div class="modal-header">
          <h3 class="modal-title">Add Team Member</h3>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body form-container">
          <div class="container">
            <% required = true  %>
            <%= f.input :name, placeholder: 'Name', required: required %>
            <%= f.input :phone, placeholder: 'Mobile No', required: required %>
            <%= render partial: 'teams/shared/upload_file', locals: {f:f, name: 'college_id', upload: "College ID", required: required } %>
            <%= f.input :github, placeholder: 'Github Profile Link', required: required %>
            <%= f.input :linkedin, placeholder: 'LinkedIn Profile Link', required: required %>
            <%= f.input :hackerearth, placeholder: 'Hackerearth Profile Link (Optional)', required: false %>
            <%= f.input :projects, placeholder: 'Describe Your Past Projects (Optional)', required: false %>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
          <a class="add-team-member-link btn btn-primary-outline" href="">Add Member</a>
          <%= f.button :submit, "", class: 'add-team-member-btn d-none' %>
        </div>
      <% end %>
    </div>
  </div>
</div>

