<section class="previous-bitcamp text-center bg-light">
  <div class="container">
    <h2 class="mb-5">PREVIOUS BITCAMP</h2>
    <div id="previousBitcampCarousel" class="carousel slide" data-ride="carousel">
      <ol class="carousel-indicators">
        <li data-target="#previousBitcampCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#previousBitcampCarousel" data-slide-to="1"></li>
        <li data-target="#previousBitcampCarousel" data-slide-to="2"></li>
        <li data-target="#previousBitcampCarousel" data-slide-to="3"></li>
        <li data-target="#previousBitcampCarousel" data-slide-to="4"></li>
      </ol>
      <div class="carousel-inner" role="listbox">
        <div class="carousel-item active">
          <img class="d-block img-fluid" src="<%= image_path 'prev_bitcamp_1.jpg' %>">
        </div>
        <div class="carousel-item">
          <img class="d-block img-fluid" src="<%= image_path 'prev_bitcamp_2.jpg' %>">
        </div>
        <div class="carousel-item">
          <img class="d-block img-fluid" src="<%= image_path 'prev_bitcamp_3.jpg' %>">
        </div>
        <div class="carousel-item">
          <img class="d-block img-fluid" src="<%= image_path 'prev_bitcamp_4.jpg' %>">
        </div>
        <div class="carousel-item">
          <img class="d-block img-fluid" src="<%= image_path 'prev_bitcamp_5.jpg' %>">
        </div>
      </div>
      <a class="carousel-control-prev" href="#previousBitcampCarousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#previousBitcampCarousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
  </div>
</section>
