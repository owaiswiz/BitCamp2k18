<script>
  document.addEventListener("turbolinks:load", function() {
    handleRegistrationForm();
  })
</script>
<div class="form-container">
  <div class="container">
    <h1>REGISTER YOUR TEAM</h1>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), defaults: {label: false}) do |f| %>
      <div class="form-inputs">
        <%= f.input :team_name, required: true, placeholder: 'Team Name', autofocus: true %>

        <%= render partial: 'teams/shared/team_member_block', locals: {f:f,name: 'leader'} %>
        <%= render partial: 'teams/shared/team_member_block', locals: {f:f,name: 'member_1'} %>
        <%= render partial: 'teams/shared/team_member_block', locals: {f:f,name: 'member_2', optional: true } %>
        <%= render partial: 'teams/shared/team_member_block', locals: {f:f,name: 'member_3', optional: true } %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Sign up", class: 'submit-btn register-new-btn' %>
      </div>
    <% end %>

    <%= render "teams/shared/links" %>
  </div>
</div>
