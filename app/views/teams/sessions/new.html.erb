<div class="form-container login-form">
  <div class="container">
    <h1>LOGIN</h1>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), defaults: {label: false}) do |f| %>
      <div class="form-inputs">
        <%= f.input :email, required: true, placeholder: 'Contact E-Mail', autofocus: true %>
        <%= f.input :password, required: true, placeholder: 'Password' %>
        <%= f.input :remember_me, as: :boolean, label: '<span class="label">Remember Me</span>'.html_safe if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Log In", class:'submit-btn login-btn' %>
      </div>
    <% end %>

    <%= render "teams/shared/links" %>
  </div>
</div>
